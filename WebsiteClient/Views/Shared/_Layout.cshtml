            ErrorMessage = function (code) {

                var statusErrorMap = {
                    '400': "El contenido de la solicitud no era válido",
                    '401': "Acceso no autorizado.",
                    '403': "No se puede acceder al recurso prohibido.",
                    '500': "Error interno de servidor.",
                    '503': "Servicio no Disponible."
                };

                return statusErrorMap[code];
            }

            ShowAlert = function (message, nivelAlert) {

                if (nivelAlert === 1) {
                    toastr.success(message);
                }
                if (nivelAlert === 2) {
                    toastr.info(message);
                }
                if (nivelAlert === 3) {
                    toastr.error(message);
                }
                if (nivelAlert === 4) {
                    toastr.warning(message);
                }
            }

            var selfLayout = new Layout({ error: 'Ocurrio un error al iniciar' });

