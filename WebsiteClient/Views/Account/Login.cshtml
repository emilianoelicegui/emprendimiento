
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<style>
    .errorsDefault {
        width: 100%;
        margin-top: .25rem;
        font-size: 80%;
        color: #dc3545;
    }
</style>

<div id="account-login" class="login-box">

    <div class="login-logo">
        <b>Admin</b>LTE
    </div>
    <!-- /.login-logo -->

    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">Ingrese los datos para iniciar</p>

            <form>
                <div class="input-group mt-3">
                    <input type="email" class="form-control" data-bind='value: email' placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <span class="errorsDefault" data-bind="visible: viewErrors, validationMessage: email"></span>

                <div class="input-group mt-3">
                    <input type="password" class="form-control" data-bind='value: password' placeholder="Contraseña">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <span class="errorsDefault" data-bind="validationMessage: password"></span>

                <div class="alert alert-danger alert-dismissible mt-3">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h5><i class="icon fas fa-ban"></i> Alert!</h5>
                    Danger alert preview. This alert is dismissable. A wonderful serenity has taken possession of my
                    entire
                    soul, like these sweet mornings of spring which I enjoy with my whole heart.
                </div>

                <div class="row mt-3">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input type="checkbox" id="remember">
                            <label for="remember">
                                Recordarme
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="button" class="btn btn-primary btn-block" data-bind="click: validate">Ingresar</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <div class="social-auth-links text-center mb-3">
                <p>- O -</p>
                <a href="#" class="btn btn-block btn-primary">
                    <i class="fab fa-facebook mr-2"></i> Iniciar con Facebook
                </a>
                <a href="#" class="btn btn-block btn-danger">
                    <i class="fab fa-google-plus mr-2"></i> Iniciar con Gmail
                </a>
            </div>
            <!-- /.social-auth-links -->

            <p class="mb-1">
                <a href="forgot-password.html">Olvidé mi contraseña</a>
            </p>
            <p class="mb-0">
                <a href="register.html" class="text-center">Registrarme</a>
            </p>
        </div>
        <!-- /.login-card-body -->
    </div>

</div>

@section Scripts{
    <script src="~/js/controller/Account/Login.js"></script>
    <script>

        var self = new Login({ message: 'Complete los datos para iniciar' });

        var validationSettings = {
            insertMessages: false,
            decorateInputElement: true,
            errorElementClass: "is-Invalid",
            errorMessageClass: "errorsDefault"
        };

        ko.validation.init(validationSettings);

        ko.applyBindings(self, document.getElementById('account-login'));

    </script>
}